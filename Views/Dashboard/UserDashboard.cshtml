@model IEnumerable<finalTicket.Models.Ticket>

<h2>User Dashboard</h2>

<p>Welcome, @User.Identity.Name! Here are the available tickets:</p>


<table class="table">
    <thead>
    <tr>
        <th>Event Name</th>
        <th>Event Date</th>
        <th>Price</th>
        <th>Movie</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ticket in Model)
    {
        <tr>
            <td>@ticket.EventName</td>
            <td>@ticket.EventDate</td>
            <td>@ticket.Price</td>
            <td>@ticket.Movie?.Title</td>
            <td>
                <a asp-action="BuyTicket" asp-route-id="@ticket.Id" class="btn btn-primary">Buy</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="ManageBalance" class="btn btn-secondary">Manage Balance</a>
<a asp-action="MyOrders" class="btn btn-secondary">My Orders</a>